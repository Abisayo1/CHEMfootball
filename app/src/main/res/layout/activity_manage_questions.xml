<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/football_field2"
    tools:context=".manageLMS.ManageLMSActivity">


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="Welcome Mr Tochukwu"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/editQuestion"
        android:layout_width="311dp"
        android:layout_height="70dp"
        android:layout_marginTop="192dp"
        android:backgroundTint="#5200FF"
        android:gravity="center"
        android:text="Edit Question"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />


    <Button
        android:id="@+id/save_questions"
        android:layout_width="311dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#5200FF"
        android:gravity="center"
        android:text="Save Questions for Later"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_questions" />

    <Button
        android:id="@+id/add_questions"
        android:layout_width="311dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#5200FF"
        android:gravity="center"
        android:text="Add Questions Now"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editQuestion"
        app:layout_constraintTop_toBottomOf="@+id/editQuestion" />


</androidx.constraintlayout.widget.ConstraintLayout>